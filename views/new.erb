<form class="" action="/students" method="post">
  <label for="first-name">First Name: </label>
  <input type="text" name="first_name" id="first-name">

  <label for="last-name">Last Name: </label>
  <input type="text" name="last_name" id="last-name">

  <label for="house_select">Select House: </label>
  <select name="house_id" id="house_select">
    <% @houses.each do |house| %>
    <option value="<%= house.id %>"><%= house.name.capitalize %></option>
    <% end %>
  </select>

  <label for="age">Age: </label>
  <input type="number" min="1" name="age" id="age">

  <input class="button" type="submit" value="Enroll">
</form>
