<form class="" action="/students/<%= @student.id %>" method="post">
  <label for="first-name">First Name: </label>
  <input type="text" name="first_name" id="first-name" value="<%= @student.first_name.capitalize %>">

  <label for="last-name">Last Name: </label>
  <input type="text" name="last_name" id="last-name" value="<%= @student.last_name.capitalize %>">

  <label for="house_select">Select House: </label>
  <select name="house_id" id="house_select">
    <% @houses.each do |house| %>
    <option value="<%= house.id %>"><%= house.name.capitalize %></option>
    <% end %>
  </select>

  <label for="age">Age: </label>
  <input type="number" min="1" name="age" id="age" value="<%= @student.age %>">

  <input type="submit" value="Edit">
</form>
